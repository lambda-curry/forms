{
  "name": "agents-repo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "shadcn-add": "yarn workspace @lambdacurry/ui shadcn-add",
    "storybook": "yarn workspace @lambdacurry/ui storybook",
    "test": "turbo run test",
    "clean": "find . -name '.turbo' -type d -prune -exec rm -rf {} + && find . -name 'node_modules' -type d -prune -exec rm -rf {} + && find . -name 'yarn.lock' -type f -delete",
    "format-and-lint": "biome check .",
    "format-and-lint:fix": "biome check . --write"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.1",
    "turbo": "^2.1.3"
  },
  "packageManager": "yarn@4.4.1"
}
